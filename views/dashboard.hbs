



    <!-- Page Content -->
  <div class="pimg1">
    <p class="presentationText">Search a dinner location where friends from your city are going tonight. Find who's going and post your choice too by logging in or via your Twitter account</p>
    <div class="row" style="margin-top:50px; margin-bottom:150px;">
      <div class="col-xs-10 col-sm-6 col-md-6 col-lg-6 offset-xs-1 offset-sm-3 offset-md-3 col-offset-lg-3 text-center">
        <form action="/dashboard/search" method="POST">
          <div style="margin-bottom:80px;" class="input-group">
            <input type="text" class="form-control" placeholder="City to search" name="search">
            <span class="input-group-btn">
              <input type="submit" class="btn btn-default btn-sm" type="button" value="Search">
            </span>
          </div>
        </form>
      </div>
    </div>
    
    {{#if searchPerformed}}
    <div class="container">
      {{#each data}}
      <div class="col-xs-10 col-sm-10 col-md-8 col-lg-6 offset-xs-1 offset-sm-1 offset-md-2 offset-lg-3 cardWrapper">
            
        <a href="{{this.url}}"><img class="card-img-top thumbImg" src="{{this.image_url}}" alt=""></a>            
        <div class="container restaurant-info text-center">
          <div class="row">
            <div class="col-md-6 text-center">
              <img class="ratingImg" src="./../images/{{this.rating}}stars.png" alt="yelp rating">
              <ul>
                <li><h4>{{this.name}}</h4></li>
                <li><i>Address:</i> {{this.location.address1}}</li>
                <li><i>City:</i> {{this.location.city}},&nbsp;{{this.location.country}}</li>
                <li style="font-size: 0.7rem;">Contact: {{this.phone}}</li>
                <!-- tle dodaj ali je prijavljen al ne -->
              </ul>
            </div>

            <div class="col-md-6 text-center">
              {{#if this.count}}
              <p>Attenders:&nbsp;{{this.count}}</p>
              <div class="dropdown">
                <button class="btn btn-default dropdown-toggle btn-sm" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                  Show who's going
                  <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                  {{#each this.usersGoing}}
                  <li>{{this}}</li>
                  {{/each}}
                </ul>
                <form action="going/{{this.name}}" method="POST">
                  <input class="btn btn-info btn-sm attendButton" type="submit" value="Attend">
                </form>
              </div>
              {{else}}
              <p>Attenders:&nbsp;{{this.count}}</p> 
                <form action="going/{{this.name}}" method="POST">
                  <input class="btn btn-info btn-sm attendButton" type="submit" value="Attend">
                </form>            
              {{/if}}
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
    {{/if}}
  </div> 

